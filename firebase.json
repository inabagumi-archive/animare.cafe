{
  "functions": {
    "predeploy": "yarn --cwd functions build"
  },
  "hosting": {
    "cleanUrls": false,
    "headers": [
      {
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=600, public, s-maxage=60"
          },
          {
            "key": "Content-Security-Policy",
            "value": "connect-src https://api.animare.cafe https://stats.g.doubleclick.net https://www.google-analytics.com; default-src 'none'; font-src https://fonts.gstatic.com; frame-src https://www.youtube.com; img-src 'self' https:; script-src 'self' 'unsafe-inline' https://www.google-analytics.com; style-src 'unsafe-inline' https://fonts.googleapis.com"
          },
          {
            "key": "Referrer-Policy",
            "value": "same-origin"
          }
        ],
        "source": "/**"
      },
      {
        "headers": [
          {
            "key": "Cache-Control",
            "value": "immutable, max-age=31536000, public"
          }
        ],
        "source": "/_nuxt/*.js"
      },
      {
        "headers": [
          {
            "key": "Cache-Control",
            "value": "immutable, max-age=31536000, public"
          }
        ],
        "source": "/_nuxt/img/*"
      },
      {
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=0, public"
          },
          {
            "key": "Content-Type",
            "value": "text/plain; charset=UTF-8"
          }
        ],
        "source": "/_nuxt/LICENSES"
      },
      {
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=0"
          }
        ],
        "source": "/sitemap.xml"
      },
      {
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=60, public, s-maxage=0"
          }
        ],
        "source": "/404.html"
      }
    ],
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "public": "./dist/",
    "redirects": [],
    "rewrites": [
      {
        "function": "handler",
        "source": "/"
      }
    ],
    "trailingSlash": false
  }
}
